<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke android:width="1dp" android:color="#757575" /> <!-- Dark gray border -->
            <corners android:radius="25dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <stroke android:width="1dp" android:color="#757575" /> <!-- Dark gray border -->
            <corners android:radius="25dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
